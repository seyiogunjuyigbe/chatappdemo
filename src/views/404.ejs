<!-- header -->
<%- include ('./partials/fe/header') -%>
<!-- page title -->
<title>Page Not Found</title>
</head>
<!-- page css -->
<%- include ('./partials/fe/nav') -%>

<style>
    .error-template {
        padding: 40px 15px;
        text-align: center;
    }

    .error-actions {
        margin-top: 15px;
        margin-bottom: 15px;
    }

    .error-actions .btn {
        margin-right: 10px;
    }
</style>

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="error-template">
                    <h2>
                        Oops... Not Found
                    </h2>
                    <div class="error-details">
                        Sorry, the requested page or resource not found!
                    </div>
                    <div class="text-center">
                        <p class="text-warning">
                            <%=message%>
                        </p>
                    </div>
                    <div class="error-actions">
                        <a href="/" class="btn btn-primary btn-lg">
                            <span class="glyphicon glyphicon-home"></span>
                            Take Me Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
